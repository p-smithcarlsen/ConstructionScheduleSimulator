<UserControl x:Class="ScheduleAlgorithmWPF.Views.Schedules.LatestStart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScheduleAlgorithmWPF.Views.Schedules"   
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="Title"                                   
                   Grid.Row="0" 
                   FontSize="15"
                   HorizontalAlignment="Center" 
                   Foreground="{StaticResource BrushPrimary2}"/>

        <ContentControl Grid.Row="1" Padding="15">
            <wpf:CartesianChart x:Name="Chart" />
        </ContentControl>

    </Grid>
</UserControl>
